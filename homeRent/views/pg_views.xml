<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        ---------------------TREE VIEW----------------------------
        <record id="Pg_tree_view" model = "ir.ui.view">
            <field name="name">Paying Guest Tree View</field>
            <field name="model">pg.pg</field>
            <field name="arch" type="xml">
                <tree expand="1" string="pg_tree_view">
                    <field name="name"/>
                    <field name="pg_price" optional = "hide"/>
                    <field name="sharing" optional="hide"/>
                    <field name="tags_ids" widget="many2many_tags" options= "{'color_field':'colors'}"/>
                    <field name="buyers_id"/>
                    <field name="salesperson_id"/>
                </tree>
            </field>
        </record>

        ---------------------SEARCH VIEW----------------------------
        <record id ="pg_search_view" model="ir.ui.view">
            <field name="name">Paying Guest search view</field>
            <field name="model">pg.pg</field>
            <field name="arch" type="xml">
                <search string="pg_search">
                    <field name="name" string="rent_lender"/>
                    <field name="pg_price"/>
                    <field name="sharing"/>
                    <separator/>
                    <filter string="sharing" name="sharing_room"/>
                    <separator/>
                    <filter string="Available" name="available"/>
                    <filter string="sharing" name="Sharing"/>
                </search>
            </field>
        </record>

        ---------------------FORM VIEW----------------------------
        <record id="pg_form_view" model="ir.ui.view">
            <field name="name">Paying Form View</field>
            <field name="model">pg.pg</field>
            <field name="arch" type="xml">
                <form string="pg_form_view">
                    <header>
                        <button name="action_done" type="object" string="Done"/>
                        <button name="action_cancel" type="object" string="cancel"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,confirm,done,cancel" />
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Done" bg_color="bg-success" attrs="{'invisible':[('state','in',('new','confirm','cancel'))]}" />
                        <widget name="web_ribbon" title="Cancel" bg_color="bg-danger" attrs="{'invisible':[('state','in',('new','confirm','done'))]}" />
                        <h1><field name="name"/></h1>
                        <group>
                            <group style="Margin-top:30px">
                                <field name="date_availability"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="tags_ids" widget ="many2many_tags" options="{'color_field': 'colors' , 'no_create':True, 'no_edit': True}"/>
                            </group> 
                            <group style= "Margin-top:30px">
                                <field name="contact_no" widget="char"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="food_category"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="sharing"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="salesperson_id" widget="many2one_avatar"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="buyers_id" widget="many2one_avatar"/>
                            </group>
                            <group style="Margin-top:30px">
                                <field name="location"/>
                            </group>
                            <!-- <group style="Margin-top:30px">
                                <field name="best_offer"/>
                            </group> -->
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                                <group>
                                    <field name="pg_price"/>
                                    <field name="deposit_money"/>
                                    <field name="total_price"/>
                                </group>
                            </page>
                            <page string="offer_ids">
                                <field name ="offer_ids">
                                    <tree editable = "top">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <button name="action_accept_pg" string='accepted' icon="fa-check" type="object"/>
                                        <button name="action_refused_pg" string='refused' icon="fa-times" type="object"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>