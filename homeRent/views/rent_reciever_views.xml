<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        ------------------------TREE VIEW---------------------------------
        <record id = "rent_reciever_tree_view" model="ir.ui.view">
            <field name ="name">Rent reciever tree view</field>
            <field name="model">rent.reciever</field>
            <field name="arch" type="xml">
                <tree expand="1" string="rent_reciever">
                    <header>
                        <button name="%(tenant_wizard_action)d" type="action" string="Add offer" class="oe_highlight"/>
                    </header>
                    <field name="name"/>
                    <field name="room_type"/>
                    <field name="tags_ids" widget="many2many_tags"  options="{'color_field':'colors'}"/>
                    <field name="sharing"/>
                    <field name="rent_type_id"/>
                </tree>
            </field>
        </record>
        ------------------------SEARCH VIEW---------------------------------
        <record id = "rent_reciever_search_view" model="ir.ui.view">
            <field name="name">Rent reciever search view</field>
            <field name="model">rent.reciever</field>
            <field name="arch" type="xml">
                <search string="rent_recieve_search">
                    <field name="name" string="rent_reciver"/>
                    <field name="renting_price"/>
                    <field name="sharing"/>
                    <field name="room_type"/>
                    <separator/>
                    <filter string="Available" name="available"/>
                    <filter string="sharing" name="sharing_room"/>
                    <separator/>
                    <filter string="room_type" name="RoomType"/>
                    <separator/>
                    <filter string="sharing" name="Sharing"/>
                    <group expand="1" string="Group by">
                        <filter string="sharing" name="sharing_room" context="{'group_by':'room_type','bachelors':'True'}"/>
                    </group>
                </search>
            </field>
        </record>
        ------------------------FORM VIEW---------------------------------

        <record id="rent_recieve_form_view" model="ir.ui.view">
            <field name="name">Rent reciever form view</field>
            <field name="model">rent.reciever</field>
            <field name="arch" type="xml">
                <form string="rent_reciever">
                    <header>
                        <button name="action_done" type="object" string="Done"/>
                        <button name="action_cancel" type="object" string="Cancel"/>
                        <field name="state" widget="statusbar"></field>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Done" bg_color="bg-success" attrs = "{'invisible': [('state','in',('new','confirm','cancel'))]}"/>
                        <widget name="web_ribbon" title="Cancel" bg_color="bg-danger" attrs="{'invisible':[('state','in',('new','confirm','done'))]}"/>
                        <label for ="name"></label>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>     
                                <field name="date_availability"/>
                            </group>
                            <group>     
                                <field name="images" widget="image" class="oe_avatar" />
                            </group>
                            <group>
                                <field name="tags_ids" widget ="many2many_tags" options="{'color_field': 'colors' , 'no_create':True, 'no_edit': True}" />
                            </group> 
                            <group>
                                <field name="renting_price"/>
                            </group>
                            <group>
                                <field name="contact_no" widget="char"/>
                            </group>
                            <group>
                                <field name="sharing"/>
                            </group>
                            <group>
                                <field name="salesperson_id" widget="many2one_avatar"/>
                            </group>
                            <group>
                                <field name="buyers_id" widget="many2one_avatar"/>
                            </group>
                            <group>
                                <field name="rent_type_id" options="{'no_create':True,'no_edit':True}"/>
                            </group>
                            <group>
                                <field name="location"/>
                            </group>
                        </group>
                        <notebook>
                            <page string = "description">
                                <field name="description"/>
                                <group>
                                    <group>
                                        <field name="bachelors"/>
                                    </group>
                                    <!-- <group style="Margin-top:30px">
                                        <field name="deposit_money" attrs = "{'invisible':[('bachelors','=',False)]}"/>
                                    </group> -->
                                    <group>
                                        <field name="room_type"/>
                                    </group>
                                    <group>
                                        <field name="total_price"/>
                                    </group>
                                </group>
                            </page>
                            <page string="offer_ids">
                                <field name ="offer_ids">
                                    <tree editable="top">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <button name="action_accept_receiver" string='accepted' icon="fa-check" type="object"/>
                                        <button name="action_refused_receiver" string='refused' icon="fa-times" type="object"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                        <field name="activity_ids"/>
                    </div>
                </form>
            </field>
        </record>

        ---------------------KANBAN VIEW----------------------------
        <record id= "rent_receiver_kanban_view" model="ir.ui.view">
            <field name="name">Rent Reciever Kanban View</field>
            <field name="model">rent.reciever</field>
            <field name="arch" type="xml">
                <kanban default_group_by="rent_type_id" record_draggable="0">
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <h3><field name="name"/></h3>
                                    </strong>
                                </div>
                                <div><field name="date_availability"/></div>
                                <div>
                                    Best Offer: <field name="total_price"/>
                                </div>
                                <div>
                                    Renting Price: <field name="renting_price"/>
                                </div>
                                <div>
                                    <field name="tags_ids" widget="many2many_tags" options="{'color_field':'colors'}"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="salesperson_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>