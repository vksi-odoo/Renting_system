<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id = "res_user_view_form" model="ir.ui.view">
            <field name="name">Rent properties</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref = "base.view_users_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position="after">
                    <page string="Rent Lender">
                        <field name="property_ids"/>
                    </page>
                    <page string="Rent Reciever">
                        <field name="properties_ids"/>
                    </page>
                    <page string="Paying Guest">
                        <field name="pg_ids"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
