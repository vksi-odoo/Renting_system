<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id = "pg_wizard_form_view" model="ir.ui.view">
        <field name="name">Paying guest</field>
        <field name="model">pg.wizard</field>
        <field name="arch" type="xml">
            <form string="Pg Wizard">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="buyer_id"/>
                        <field name="salesman_id"/>
                    </group>
                    <footer>
                        <button name="action_pg" string="Submit" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="pg_wizar_action" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pg.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="pg_wizard_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>