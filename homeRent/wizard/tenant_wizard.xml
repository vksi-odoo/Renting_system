<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id = "tenant_wizard" model="ir.ui.view">
        <field name="name">Rent tenant</field>
        <field name="model">tenant.wizard</field>
        <field name="arch" type="xml">
            <form string="Wizard for tenant">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="buyer_id"/>
                        <field name="salesman_id"/>
                    </group>
                    <footer>
                        <button name="action_tenant" string="Submit" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-primary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tenant_wizard_action" model="ir.actions.act_window">
        <field name="name">Add offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tenant.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="tenant_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>