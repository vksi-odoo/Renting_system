<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reciever_report">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <strong><span t-field="property.name"/></strong>
                        </h2>
                        <div>
                            <strong>Salesman:</strong>
                            <span t-field="property.salesperson_id"/>
                        </div>
                        <div>
                            <strong>Renting Price:</strong>
                            <span t-field="property.renting_price"/>
                        </div>
                        <div>
                            <strong>Room Type:</strong>
                            <span t-field="property.room_type"/>
                        </div>
                        <div>
                            <strong>Status:</strong>
                            <span t-field="property.state"/>
                        </div>
                        <t t-call="homeRent.reciever_sub_template_report">
                            <t t-set="property" t-value="property"/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="reciever_sub_template_report">
        <table class="table" t-if="property.offer_ids">
            <thead>
                <tr>
                    <th>Price</th>
                    <th>Partner id</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                <tr t-foreach="offers" t-as="offer">
                    <td>
                        <span t-field="offer.price"/>
                    </td>
                    <td>
                        <span t-field="offer.partner_id"/>
                    </td>
                    <td>
                        <span t-field="offer.status"/>
                    </td>
                </tr>
            </tbody>
        </table>
        <p t-else="">No offer have been made yet</p>
    </template>

    <template id="rent_reciever_user">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <strong>Salesman:</strong>
                            <span t-field="user.name"/>
                        </h2>
                        <t t-set="offer_report" t-value="user.mapped('property_ids')"/>
                        <t t-foreach="offer_report" t-as="property">
                            <div>
                                <h1>
                                    <span t-field="property.name"/>
                                </h1>
                                <div>
                                    <strong>Renting Price</strong>
                                    <span t-field="property.renting_price"/>
                                </div>
                                <div>
                                    <strong>Status:</strong>
                                    <span t-field="property.state"/>
                                </div>
                                <t t-call="homeRent.reciever_sub_template_report">
                                    <t t-set="user" t-value="property"/>
                                </t>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>